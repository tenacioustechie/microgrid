body {
  background-color: #FFAA00;
}

.container {
  position: relative;
}

.house-display-box {
  margin: 30px 30px 30px 30px;
  float: left;
  width: 300px;
  border: 1px solid black;
}
.house-heading {
  width: 100%;
  height: 30px;
  font-size: 24px;
  text-align: center;
}
.house-display {
  width: 100%;
  height: 30px;
  margin-top: 15px;
  font-size: 34px;
  font-weight: bold;
  text-align: center;
}
.house-buttons {
  width: 100%;
  height: 40px;
}
.house-buttons button {
  width: 144px;
  margin: 2px;
  height: 28px;
}
.house-subtext {
  font-size: 8px;
  text-align: center;
}

.control-options {
  margin: 30px 30px 30px 30px;
  float: left;
  width: 200px;
  border: 1px solid black;

}
.option {
  width: 200px;
  padding: 4px;
}
.option button {
  padding: 4px;
  font-size: 18px;
  font-weight: bold;
  width: 192px;
}